  <style>
    html,
    body,
    textarea,
    pre {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
    }

    textarea {
      width: 100%;
      height: auto;
      padding: 5px;
    }

    .btn {
      background-color: pink;
      border-radius: 3px;
      width: 40px;
      height: 30px;
      text-align: center;
      cursor: pointer;
      font-size: 16px;
      line-height: 30px;
    }

    pre {
      white-space: pre-wrap;
      /* css-3 */
      white-space: -moz-pre-wrap;
      /* Mozilla, since 1999 */
      white-space: -pre-wrap;
      /* Opera 4-6 */
      white-space: -o-pre-wrap;
      /* Opera 7 */
      overflow: auto;
      word-break: break-all;
      word-wrap: break-word;
    }
  </style>
</head>

